{
  "version": "2.0.0",
  "type": "shell",
  "command": "egret",
  "presentation": {
    "echo": false,
    "reveal": "always",
    "focus": true,
    "panel": "shared",
    "showReuseMessage": false,
    "clear": true
  },
  "tasks": [
    {
      "label": "build",
      "args": ["build", "-sourcemap"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "run",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "args": ["startserver", "-serveronly", "-ip"],
      "problemMatcher": "$tsc"
    },
    {
      "label": "clean",
      "args": ["build", "-e"],
      "problemMatcher": "$tsc"
    }
  ]
}
